<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    android:paddingStart="@dimen/dim_24"
    android:paddingEnd="@dimen/dim_24"
    android:paddingTop="@dimen/dim_24"

    android:background="@color/white100"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/setAdapterMenuRestaurantClientCvContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_162"

        app:cardCornerRadius="@dimen/dim_28"
        app:cardElevation="@dimen/dim_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dim_8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/setAdapterMenuRestaurantClientIvPhotoItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/txt_size_20"
                android:textStyle="bold"

                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_104"
        android:layout_below="@+id/setAdapterMenuRestaurantClientCvContainer"
        android:layout_alignStart="@+id/setAdapterMenuRestaurantClientCvContainer"
        android:layout_alignEnd="@+id/setAdapterMenuRestaurantClientCvContainer"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="-1dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dim_1"
        app:cardCornerRadius="@dimen/dim_32"
        app:layout_constraintEnd_toEndOf="@+id/setAdapterMenuRestaurantClientCvContainer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/setAdapterMenuRestaurantClientCvContainer"
        app:layout_constraintTop_toTopOf="@+id/setAdapterMenuRestaurantClientCvContainer">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="@dimen/dim_24"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/setAdapterMenuRestaurantClientTxvNameItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/items"
                android:textColor="@color/red400"
                android:textSize="@dimen/txt_size_12" />

            <TextView
                android:id="@+id/setAdapterMenuRestaurantClientTxvDetailsItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/items"
                android:textColor="@color/dark500"
                android:textSize="@dimen/txt_size_8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="@string/price"
                    android:textColor="@color/dark500"
                    android:layout_marginEnd="@dimen/dim_8"
                    />

                <TextView
                    android:id="@+id/setAdapterMenuRestaurantClientTxvPriceItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dim_8"

                    />

                <TextView
                    android:id="@+id/setAdapterMenuRestaurantClientTxvOffersPriceItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>