<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/setAdapterItemsCardView"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="@dimen/dim_56"
        android:layout_marginEnd="@dimen/dim_24"
        android:layout_marginTop="@dimen/dim_24"
        app:cardBackgroundColor="@color/gray77"
        app:cardCornerRadius="@dimen/dim_28"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dim_8"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_48"
                android:layout_marginEnd="@dimen/dim_8"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/setAdapterNewOfferTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/items"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_12" />

                <Button
                    android:layout_width="@dimen/dim_144"
                    android:layout_height="@dimen/dim_32"
                    android:text="@string/get_offers"
                    android:background="@drawable/shape_btn"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/dim_l6"
                    android:paddingEnd="@dimen/dim_l6"
                    android:layout_marginTop="@dimen/dim_24"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:textSize="@dimen/dim_8"
                    />
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/setAdapterItemsCardView"
        android:layout_alignTop="@+id/setAdapterItemsCardView"
        android:layout_alignBottom="@+id/setAdapterItemsCardView"
        android:layout_marginStart="-37dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/gray00"
        app:cardCornerRadius="@dimen/dim_32">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="@dimen/dim_88"
            android:layout_height="@dimen/dim_88"

             android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setAdapterNewOfferImgPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_20"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>