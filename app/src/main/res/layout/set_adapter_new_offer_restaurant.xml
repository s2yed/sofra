<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/setAdapterItemsCardView"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="@dimen/dim_40"
        android:layout_marginEnd="@dimen/dim_24"
        android:layout_marginTop="@dimen/dim_24"
        app:cardBackgroundColor="@color/gray77"
        app:cardCornerRadius="@dimen/dim_28"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dim_8"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_56"
                android:layout_marginEnd="@dimen/dim_32"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/setAdapterNewOfferTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/items"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_12" />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/gray00"
        app:cardCornerRadius="@dimen/dim_32"
        app:layout_constraintBottom_toBottomOf="@+id/setAdapterItemsCardView"
        app:layout_constraintEnd_toEndOf="@+id/setAdapterItemsCardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setAdapterItemsCardView">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="@dimen/dim_72"
            android:layout_height="@dimen/dim_72"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setAdapterNewOfferImgPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_20"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>