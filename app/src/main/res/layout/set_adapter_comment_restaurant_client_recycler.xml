<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription,DisableBaselineAlignment,UselessParent"
    android:layout_gravity="center"
    android:orientation="horizontal"
     >

    <RelativeLayout
        android:id="@+id/setAdapterItemsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="@dimen/dim_l6"
        android:paddingBottom="@dimen/dim_4"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/setAdapterItemsCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_104"
             app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dim_28"
            app:cardElevation="@dimen/dim_1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
               >


                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_48"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/setAdapterCommentRestaurantClientTVNameUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />




                    <TextView
                        android:id="@+id/setAdapterCommentRestaurantClientTvComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="@dimen/txt_size_8"
                        android:layout_marginStart="@dimen/dim_l6"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/dim_8">



                    <ImageView
                        android:id="@+id/setAdapterCommentRestaurantClientImgPhotoStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/ic_menu_mylocation" />

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>



</LinearLayout>