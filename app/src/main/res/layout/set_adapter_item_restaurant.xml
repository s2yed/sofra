<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription">


    <android.support.v7.widget.CardView
        android:id="@+id/setAdapterItemsCardView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dim_4"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="@dimen/dim_l2"
        app:cardBackgroundColor="@color/white"

        app:cardCornerRadius="@dimen/dim_28">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dim_8"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dim_56"
                android:layout_height="@dimen/dim_56"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dim_8">

                <ImageView
                    android:id="@+id/setAdapterMyItemImgPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_20"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dim_8"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/setAdapterNameItemsTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/items"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_12" />
                <TextView
                    android:id="@+id/setAdapterDetailsItemsTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/items"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_8" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="@dimen/dim_8"
                android:layout_weight="0.5"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:gravity="center">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_12"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/setAdapterPriceItemsTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:text="@string/_0_0"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/txt_size_12"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/setAdapterPriceOffersItemsTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                     android:textColor="@color/red300"
                    android:textSize="@dimen/txt_size_12"
                    android:gravity="center"
                    />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>