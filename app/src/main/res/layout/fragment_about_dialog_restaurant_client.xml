<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="@dimen/dim_24"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:text="@string/who_are_we"
        android:textColor="@color/dark" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_l6"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_28"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/commentDialogRestaurantClientEtDetailsComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="@dimen/dim_24"
            android:text="@string/text_"
            android:textColor="@color/dark_blue100"
            android:textSize="@dimen/txt_size_16" />
    </android.support.v7.widget.CardView>
</LinearLayout>


