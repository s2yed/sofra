<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dim_56">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/getOrderRestaurantClientRvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/set_adapter_get_offers_restaurant_client_recycler" />

    <ProgressBar
        android:id="@+id/getOrderRestaurantProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/getOrderRestaurantClientRvContent"
        android:layout_alignEnd="@+id/getOrderRestaurantClientRvContent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/getOrderRestaurantClientRvContent"
        app:layout_constraintEnd_toEndOf="@+id/getOrderRestaurantClientRvContent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/getOrderRestaurantClientRvContent"
        app:layout_constraintTop_toTopOf="@+id/getOrderRestaurantClientRvContent" />


</android.support.constraint.ConstraintLayout>